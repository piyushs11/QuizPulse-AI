
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  createdAt DateTime @default(now())
  responses Response[]
  scores    Score[]
}

model Quiz {
  id         String     @id @default(cuid())
  title      String
  topic      String
  joinCode   String     @unique
  createdBy  String?
  status     QuizStatus @default(DRAFT)
  createdAt  DateTime   @default(now())
  questions  Question[]
  sessions   Session[]
}

model Question {
  id            String   @id @default(cuid())
  quizId        String
  questionText  String
  options       String[]
  correctIndex  Int
  explanation   String?
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  responses     Response[]
}

model Session {
  id        String    @id @default(cuid())
  quizId    String
  startedAt DateTime? 
  endedAt   DateTime?
  isActive  Boolean   @default(true)
  quiz      Quiz      @relation(fields: [quizId], references: [id], onDelete: Cascade)
  scores    Score[]
}

model Response {
  id             String   @id @default(cuid())
  userId         String
  questionId     String
  selectedIndex  Int
  isCorrect      Boolean
  timeTakenMs    Int
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question       Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Score {
  id        String   @id @default(cuid())
  sessionId String
  userId    String
  score     Int      @default(0)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, userId])
}

enum QuizStatus {
  DRAFT
  LIVE
  ENDED
}
